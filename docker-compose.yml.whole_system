version: "3.9"
services:
  backend:
    build: ./kinematik-backend
    image: kinematik-backend:latest
    ports:
      - 5000:80

  frontend:
    build: ./kinematik-frontend
    image: kinematik-frontend:latest
    ports:
      - 5001:3000

  proxy:
    image: nginx:latest
    depends_on:
      - backend
      - frontend
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
    ports:
      - 80:80
